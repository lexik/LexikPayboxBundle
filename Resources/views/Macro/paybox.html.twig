{%- macro input(field) -%}
    <input type="{{ field.vars.block_prefixes[1] }}" name="{{ field.vars.name }}" {% if field.vars.value is not empty %}value="{{ field.vars.value }}" {% endif %}/>
{%- endmacro -%}

{%- macro form(form) -%}
    {% import _self as self %}
    
    {%- for field in form -%}
        {{ self.input(field) }}
    {%- endfor -%}
{%- endmacro -%}
